<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFE2DFDF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context=".NguPhap.NguPhapFragment">

   <Button
       android:textStyle="bold"
       android:id="@+id/btnThi"
       android:text="Thì của động từ"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingTop="20dp"
       />
    <Button
        android:textStyle="bold"
        android:id="@+id/btnTuLoai"
        android:text="Từ loại"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:paddingTop="20dp"/>
    <Button
        android:textStyle="bold"
        android:id="@+id/btnMDQH"
        android:text="Mệnh đề quan hệ"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:paddingTop="20dp"/>
    <Button
        android:textStyle="bold"
        android:id="@+id/btnCDK"
        android:text="Câu điều kiện"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:paddingTop="20dp"/>



</LinearLayout>